<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmDiziTakip.SifreDegistirPage"
             Title="Şifre Değiştirme Sayfası"
             BackgroundColor="#FFF8E7">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry x:Name="txtEskiSifre" 
               Placeholder="Eski Şifre" 
               IsPassword="True" 
               BackgroundColor="White"
               TextColor="Black"
               HeightRequest="45"/>

        <Entry x:Name="txtYeniSifre" 
               Placeholder="Yeni Şifre" 
               IsPassword="True"
               BackgroundColor="White"
               TextColor="Black"
               HeightRequest="45"/>

        <Entry x:Name="txtYeniSifreTekrar" 
               Placeholder="Yeni Şifre (Tekrar)" 
               IsPassword="True"
               BackgroundColor="White"
               TextColor="Black"
               HeightRequest="45"/>

        <Button Text="Şifreyi Değiştir" 
                Clicked="SifreDegistir_Clicked" 
                BackgroundColor="#001F54"
                TextColor="White"
                HeightRequest="45"/>

        <Label x:Name="lblDurum" 
               TextColor="Red" 
               FontAttributes="Italic" 
               FontSize="14"/>

    </VerticalStackLayout>
</ContentPage>
